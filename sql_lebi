DROP TABLE IF EXISTS CLIENT ;
CREATE TABLE CLIENT (ID_Client_CLIENT INT AUTO_INCREMENT NOT NULL,
Nom_CLIENT VARCHAR(9),
Prenom_CLIENT VARCHAR(18),
Email_CLIENT VARCHAR(12),
Nationalité_CLIENT VARCHAR(12),
Contact_CLIENT VARCHAR(10),
CNI_CLIENT VARCHAR(12),
CP_CLIENT VARCHAR(25),
RIB_CLIENT VARCHAR(18),
PRIMARY KEY (ID_Client_CLIENT)) ENGINE=InnoDB;

DROP TABLE IF EXISTS RESERVATION ;
CREATE TABLE RESERVATION (ID_Reservation_RESERVATION INTEGER(2) AUTO_INCREMENT NOT NULL,
N°_reservation_RESERVATION INTEGER(4),
Date_debut_RESERVATION DATETIME,
Date_fin_RESERVATION DATETIME,
Periode_RESERVATION DATETIME,
ID_Client_CLIENT **NOT FOUND**(2),
PRIMARY KEY (ID_Reservation_RESERVATION)) ENGINE=InnoDB;

DROP TABLE IF EXISTS BIEN ;
CREATE TABLE BIEN (ID_BIEN_BIEN INT AUTO_INCREMENT NOT NULL,
Libellé_BIEN VARCHAR(8),
Description_BIEN VARCHAR(100),
Type_bien_BIEN VARCHAR(18),
NbrePiece_BIEN INT(2),
Douche_BIEN INT(2),
Adresse_BIEN VARCHAR(20),
Statut_BIEN VARCHAR(8),
Prestige_BIEN VARCHAR(12),
Superficie_BIEN INTEGER(4),
Prix_BIEN DECIMAL(8),
ID_Reservation_RESERVATION **NOT FOUND**,
ID_Site_SITE **NOT FOUND**,
PRIMARY KEY (ID_BIEN_BIEN)) ENGINE=InnoDB;

DROP TABLE IF EXISTS SITE ;
CREATE TABLE SITE (ID_Site_SITE INT AUTO_INCREMENT NOT NULL,
Libellé_SITE VARCHAR(8),
ID_Quartier_QUARTIER **NOT FOUND**,
PRIMARY KEY (ID_Site_SITE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS QUARTIER ;
CREATE TABLE QUARTIER (ID_Quartier_QUARTIER INT AUTO_INCREMENT NOT NULL,
Nom_QUARTIER VARCHAR(12),
ID_Commune_COMMUNE **NOT FOUND**,
PRIMARY KEY (ID_Quartier_QUARTIER)) ENGINE=InnoDB;

DROP TABLE IF EXISTS COMMUNE ;
CREATE TABLE COMMUNE (ID_Commune_COMMUNE INT AUTO_INCREMENT NOT NULL,
Nom_COMMUNE VARCHAR(14),
NbreHabitant_COMMUNE INTEGER(4),
Superficie_COMMUNE VARCHAR(4),
ID_Ville_VILLE **NOT FOUND**,
PRIMARY KEY (ID_Commune_COMMUNE)) ENGINE=InnoDB;

DROP TABLE IF EXISTS VILLE ;
CREATE TABLE VILLE (ID_Ville_VILLE INT AUTO_INCREMENT NOT NULL,
Nom_VILLE VARCHAR(12),
Region_VILLE VARCHAR(14),
PRIMARY KEY (ID_Ville_VILLE)) ENGINE=InnoDB;

ALTER TABLE RESERVATION ADD CONSTRAINT FK_RESERVATION_ID_Client_CLIENT FOREIGN KEY (ID_Client_CLIENT) REFERENCES CLIENT (ID_Client_CLIENT);

ALTER TABLE BIEN ADD CONSTRAINT FK_BIEN_ID_Reservation_RESERVATION FOREIGN KEY (ID_Reservation_RESERVATION) REFERENCES RESERVATION (ID_Reservation_RESERVATION);
ALTER TABLE BIEN ADD CONSTRAINT FK_BIEN_ID_Site_SITE FOREIGN KEY (ID_Site_SITE) REFERENCES SITE (ID_Site_SITE);
ALTER TABLE SITE ADD CONSTRAINT FK_SITE_ID_Quartier_QUARTIER FOREIGN KEY (ID_Quartier_QUARTIER) REFERENCES QUARTIER (ID_Quartier_QUARTIER);
ALTER TABLE QUARTIER ADD CONSTRAINT FK_QUARTIER_ID_Commune_COMMUNE FOREIGN KEY (ID_Commune_COMMUNE) REFERENCES COMMUNE (ID_Commune_COMMUNE);
ALTER TABLE COMMUNE ADD CONSTRAINT FK_COMMUNE_ID_Ville_VILLE FOREIGN KEY (ID_Ville_VILLE) REFERENCES VILLE (ID_Ville_VILLE);
